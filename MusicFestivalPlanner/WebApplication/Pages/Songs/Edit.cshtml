@page
@model WebApplication.Pages.Songs.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Song</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Song.SongId" />
            <div class="form-group">
                <label asp-for="Song.SongName" class="control-label"></label>
                <input asp-for="Song.SongName" class="form-control" />
                <span asp-validation-for="Song.SongName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.ReleaseDate" class="control-label"></label>
                <input asp-for="Song.ReleaseDate" class="form-control" />
                <span asp-validation-for="Song.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.Duration" class="control-label"></label>
                <input asp-for="Song.Duration" class="form-control" />
                <span asp-validation-for="Song.Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.GenreId" class="control-label"></label>
                <select asp-for="Song.GenreId" class="form-control" asp-items="Model.GenreSelectList"></select>
                <span asp-validation-for="Song.GenreId" class="text-danger"></span>
                 <a asp-page="/Genres/Create" target="_blank" asp-route-creatingGenre="true" value="Add New Genre" >Add New Genre</a>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
