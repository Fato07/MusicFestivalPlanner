    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PerformerSong</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PerformerSong.PerformerSongId"/>
            <div class="form-group">
                <label asp-for="PerformerSong.SongId" class="control-label"></label>
                <select asp-for="PerformerSong.SongId" class="form-control" asp-items="Model.SongSelectList"></select>
                <a asp-page="/Songs/Create" target="_blank" asp-route-creatingSong="true" value="Add New Song">Add New Song</a>
            </div>
            <div class="form-group">
                <label asp-for="PerformerSong.PerformerId" class="control-label"></label>
                <select asp-for="PerformerSong.PerformerId" class="form-control" asp-items="Model.PerformerSelectList"></select>
                <a asp-page="/Performers/Create" target="_blank" asp-route-creatingPerformer="true" value="Add New Performer">Add New Performer</a>
            </div>
            <div class="form-group">
                <label asp-for="PerformerSong.RoleId" class="control-label"></label>
                <select asp-for="PerformerSong.RoleId" class="form-control" asp-items="Model.RoleSelectList"></select>
                <a asp-page="/Roles/Create" target="_blank" asp-route-creatingRole="true" value="Add New Role">Add New Role</a>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

